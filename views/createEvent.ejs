    <script>
        $(document).ready(function() {

            console.log("login document ready");
            
            $(document).on('scroll', function(e) {
                if ($(window).width() > 992) {
                    var rgba = $(document).scrollTop() / 500;
                    $('.navbar').css('background-color', 'rgba(255,255,255,' + rgba + ')');
                }
            });


            $("#create_event_btn").click(function() {

                var username = localStorage.getItem("username_local");

                var eventname = document.getElementById("event_name").value;
                var eventdesc = document.getElementById("event_desc").value;
                var startdate = document.getElementById("start_date").value;
                var starttime = document.getElementById("start_time").value;
                var enddate = document.getElementById("end_date").value;
                var endtime = document.getElementById("end_time").value;
                var location = document.getElementById("event_location").value;
                var contact = document.getElementById("event_contact").value;
                var capacity = document.getElementById("event_capacity").value;


                var data = {

                    username: username,
                    eventname: eventname,
                    eventdesc: eventdesc,
                    startdate: startdate,
                    starttime: starttime,
                    enddate: enddate,
                    endtime: endtime,
                    location: location,
                    contact: contact,
                    capacity: capacity,

                };

                console.log(data.capacity + " " + data.contact + " " + data.location);

                $.ajax({
                    type: 'POST',
                    url: '/create_event',
                    data: data,
                    success: function(data) {

                        console.log("inside create event call back");
                        console.log(data);
                        $("#eventcreatedmodal").modal('show');
                    }
                });

                document.getElementById("event_name").innerHTML = "";
                document.getElementById("event_desc").innerHTML = "";
                document.getElementById("start_date").innerHTML = "";
                document.getElementById("start_time").innerHTML = "";
                document.getElementById("end_date").innerHTML = "";
                document.getElementById("end_time").innerHTML = "";
                document.getElementById("event_location").innerHTML = "";
                document.getElementById("event_contact").innerHTML = "";
                document.getElementById("event_capacity").innerHTML = "";

            });


            $("#calendar").click(function() {
                $.ajax({
                    type: 'GET',
                    url: '/calendar',
                    success: function(data) {
                        window.location.pathname = "/calendar"
                    }
                });
                return false;
            });


            $("#logout_navbar_btn").click(function() {
                $.ajax({
                    type: 'GET',
                    url: '/register',
                    success: function(data) {

                        window.location.pathname = "/register"
                    }
                });
                return false;
            });


            var username_print = localStorage.getItem("username_local");
            document.getElementById("profile_name").innerHTML = username_print;


            $("#profile_name").click(function() {
                $.ajax({
                    type: 'GET',
                    url: '/notify',
                    success: function(data) {
                        window.location.pathname = "/notify"
                        console.log("welcome");
                    }

                });
                return false;
            });



            $("#home_navbar_btn").click(function() {
                $.ajax({
                    type: 'GET',
                    url: '/home',
                    success: function(data) {
                        window.location.pathname = "/home"
                        console.log("home from event created");
                    }

                });
                return false;
            });


            $("#contact_us").click(function() {
                $('html,body').animate({
                    scrollTop: $("#footer_section").offset().top
                }, 'medium');

            });




        });

    </script>

