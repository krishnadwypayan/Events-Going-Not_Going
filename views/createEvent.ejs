    <center>
        <!-- Hero section -->
        <div style="margin-top: -0.5em;"  style="background: transparent; opacity: 1;">
            <div class="container--flex"  style="background: transparent; opacity: 1;">

                <div class="card" style="background: transparent; opacity: 1;">
