            $("#login_btn_modal").click(function() {
                var name = document.getElementById("name").value;
                var password = document.getElementById("pass").value;



                var data = {
                    username: name,
                    password: password

                };

                $.ajax({
                    type: 'POST',
                    url: '/login_check',
                    data: data,
                    success: function(data) {
                        //do something with the data via front-end framework
                        //location.reload();
                        //renderHtml(data);
                        console.log("inside sign in call back");
                        console.log(data);

                        //alert(name);

                        if (data.length >= 1) {
                            localStorage.setItem("username_local", $("#name").val());
                            if (localStorage.getItem("username_local"))
                                window.location.pathname = "/home";
                            else
                                window.location.pathname = "/register";
                        } else {
